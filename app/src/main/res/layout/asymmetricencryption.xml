<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD4EC"
    android:columnCount="2"
    android:rowCount="7"
    android:useDefaultMargins="true"
    tools:context="nielsj.crypto.view.SymmetricEncryption">

    <Button
        android:id="@+id/generateKeyPairButton"
        android:layout_row="0"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Generate key pair"></Button>

    <Button
        android:id="@+id/clearButton"
        android:layout_row="0"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Clear keys"></Button>

    <EditText
        android:id="@+id/modulusEditText"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:maxLines="1"
        android:inputType="text">
    </EditText>

    <EditText
        android:id="@+id/privateKeyExponentEditText"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:maxLines="1"
        android:inputType="text">
    </EditText>

    <EditText
        android:id="@+id/publicKeyExponentEditText"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:maxLines="1"
        android:inputType="text"></EditText>

    <TextView
        android:id="@+id/guideTextView"
        android:layout_row="4"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="  Type message: "></TextView>

    <EditText
        android:id="@+id/messageEditText"
        android:layout_row="4"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:typeface="monospace"
        android:inputType="textMultiLine"></EditText>

    <Button
        android:id="@+id/signButton"
        android:layout_row="5"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Sign"></Button>

    <EditText
        android:id="@+id/signatureEditText"
        android:layout_row="5"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:maxLines="1"
        android:inputType="text"></EditText>

    <Button
        android:id="@+id/verifyButton"
        android:layout_row="6"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Verify"></Button>

    <EditText
        android:id="@+id/verificationEditText"
        android:layout_row="6"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:maxLines="1"
        android:inputType="text"></EditText>

</GridLayout>